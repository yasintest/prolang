
@{
    Layout = "~/Views/shared/_Layout.cshtml";
    ViewBag.Title = "Sunucu Yönetim Paneli | İletişim";
    ViewBag.Description = "Sunucu Yönetim Paneli İletişim";
    ViewBag.Keywords = "sunucu, yönetim,paneli,iletisim";
}

<style>
    #wrapper {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, .5);
    z-index: 9999;
}
#message-sent {
    width: 340px;
    height: 60px;
    line-height: 60px;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -30px;
    margin-left: -170px;
    font-weight: 600;
    border-radius: 0 16px;
    color: #191970;
    background: white;
    box-shadow: 0 0 20px 4px #0d6636;
}
#close-button {
    width: 18px;
    height: 18px;
    line-height: 18px;
    text-align: center;
    position: absolute;
    top: -8px;
    right: -8px;
    background: white;
    border-radius: 0 8px;
    border: 1px solid #0d6636;
    cursor: pointer;
    font-weight: 600;
}               
</style>

<div class="content-text">
    <h2>Neredeyiz?</h2>
    <div id="google-maps">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2994.444120072553!2d36.18235931483845!3d41.36443470538168!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40887eff7ef257ab%3A0x6a3bef5edada1fa3!2sM%C3%BChendislik+Fak%C3%BCltesi!5e0!3m2!1str!2str!4v1449141432017" width="800" height="420" frameborder="0" style="border: 0" allowfullscreen></iframe>
    </div>

    <h2>İletişim</h2>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "contact-form", action = "/İletisim" }))
    {
        if (ViewBag.Success != null && ViewBag.Success)
        {
            <div id="wrapper">
                <div id="message-sent">
                    <div id="close-button">
                        <span>X</span>
                    </div>
                    <span>Mesajınız başarıyla gönderilmiştir.</span>
                </div>
            </div>
        }


        <div class="contact-line">
            <button class="obligation-button" type="button">
                <span> Sadece Gerekli Alanları Göster</span>
            </button>
        </div>
        <div class="contact-line">
            <div class="contact-col1">
                <span> Takma Ad</span>
            </div>
            <div class="contact-col2">
                <input type="text" class="input" id="input-nickname" name="NickName" required />
            </div>
        </div>
        <div class="contact-line contact-line-unrequired">
            <div class="contact-col1">
                <span>Ad-Soyad</span>
            </div>
            <div class="contact-col2">
                <input type="text" class="input" name="FullName" />
            </div>
        </div>
        <div class="contact-line">
            <div class="contact-col1">
                <span>E-posta</span>
            </div>
            <div class="contact-col2">
                <input type="email" class="input" id="input-email" name="Email" required />
            </div>
        </div>
        <div class="contact-line contact-line-unrequired">
            <div class="contact-col1">
                <span>Telefon Numası</span>
            </div>
            <div class="contact-col2">
                <input type="tel" class="input" name="Phone" />
            </div>
        </div>
        <div class="contact-line message">
            <div class="contact-col1">
                <span>İleti</span>
            </div>
            <div class="contact-col2">
                <textarea class="textarea" id="input-text" name="Message" required></textarea>
            </div>
        </div>
        <div class="contact-line">
            <button type="submit" formenctype="" class="contact-button" onclick="FormEksikMi()">
                <span>Gönder</span>
            </button>
        </div>
    }
</div>
<script>
    $(document).ready(function () {
        $(".obligation-button").click(function () {
            $(".contact-line-unrequired").slideToggle();
        });
    });

    function FormEksikMi() {
        var Rumuz = document.getElementById("input-nickname").value;
        var Eposta = document.getElementById("input-email").value;
        var ileti = document.getElementById("input-text").value;
        if (Rumuz === "" || Eposta === "" || ileti === "") {
            alert("Lütfen Gerekli Alanları Doldurunuz");
            return false;
        }
    }
</script>
<script>
   $('#wrapper').click(function () {
       $(this).fadeOut('slow');
   });
</script>  