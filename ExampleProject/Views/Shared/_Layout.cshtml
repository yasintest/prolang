@using System.Web.Script.Services
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>

    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <meta name="robots" content="all" />
    <meta name="revisit-after" content="1 week" />

    @*site başlığının yanında ve paylaşılırken icon çıkması için*@
    <link href="~/Content/css/StyleSheet.css" rel="stylesheet" />
    <link href="~/Content/css/normalize.css" rel="stylesheet"/>

    <link href="~/Content/img/favicon.png" rel="shortcut icon"/>
    <link href="~/Content/img/favicon.png" rel="image_src" />

    @*Google Fonts Start*@
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic&subset=latin-ext' rel='stylesheet' type='text/css'>
    @*Google Fonts Finish*@

    @*Slider Start*@
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script src="~/Scripts/jmpress.min.js"></script>
    <script src="~/Scripts/jquery.jmslideshow.js"></script>
    <script src="~/Scripts/modernizr.custom.48780.js"></script>
    @*Slider Finish*@

</head>
<body>
    <section id="container">
        <header>
            <a href="/">
                <div id="logo"></div>
            </a>
            <div id="social-media">
                <a href="?">
                    <div class="social rss"></div>
                </a>
                <a href="#">
                    <div class="social share"></div>
                </a>
                <a href="https://www.youtube.com/" target="_blank">
                    <div class="social youtube"></div>
                </a>
                <a href="https://twitter.com/" target="_blank">
                    <div class="social twitter"></div>
                </a>
                <a href="https://tr-tr.facebook.com/" target="_blank">
                    <div class="social facebook"></div>
                </a>
            </div>
            @using (Html.BeginForm("Ara", "Home", FormMethod.Get))
            {
                <div id="search">
                    <div id="search-area">
                        <input type="text" class="search-text" name="search" />
                    </div>
                    <div id="search-button">
                        <input type="submit" class="search-button" value="Ara" />
                    </div>
                </div>
            }
        </header>
        <nav>
            <a href="/">
                <div class="nav-item first">
                    <span>Servisleri Başlatma Durdurma</span>
                </div>
            </a>
            <a href="/ServisBilgileri">
                <div class="nav-item">
                    <span>Servis Bilgileri</span>
                </div>
            </a>
            <a href="/Hakkinda">
                <div class="nav-item">
                    <span>Hakkımızda</span>
                </div>
            </a>
            <a href="/İletisim">
                <div class="nav-item last">
                    <span>İletişim</span>
                </div>
            </a>
        </nav>
        <section id="content">
            @RenderBody()
        </section>
        <footer>
            <small> 2015 &copy; Sunucu Yönetim Paneli &copy; Yasin BARAN | Tüm Hakları Saklıdır.</small>
        </footer>
    </section>
    <script src="~/Scripts/modernizr.custom.js"></script>
    <script src="~/Scripts/classie.js"></script>
    <script src="~/Scripts/thumbnailGridEffects.js"></script>
    @RenderSection("scripts", required: false) @*Arama motoru için bu kısmı unutma*@
</body>
</html>
